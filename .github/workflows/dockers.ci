name: Docker Image CI

on:
  push:
    branches: [ master ]
  pull_request:
    branches: [ master ]

jobs:
  dev-server-docker:
  build:

    runs-on: ubuntu-latest

    steps:
    - uses: actions/checkout@v2
    - name: Build the qmpy docker image with development server
      run: docker build . --file dockerfiles/Dockerfile.debug -t qmpy_debug

